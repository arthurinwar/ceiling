                </Style>
            </Button.Style>
        </Button>


        <Border Background="#BECAEE" Grid.Column="0" Margin="0, 35, 35, 35" CornerRadius="0, 20, 20, 0">
            <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto" MinHeight="20"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto" MinHeight="20"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>


                <TextBlock Text="ВРЕМЯ" FontSize="20" FontFamily="Inter" Foreground="#54628A" Grid.Row="0" HorizontalAlignment="Center" FontWeight="Bold"/>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    
                    <Border Grid.Column="0" Background="#444D71" Width="140">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10, 0, 0, 10" />
                            </Style>
                        </Border.Style>
                        <TextBlock Text="СПУСК" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" />
                    </Border>



                    <TextBox Grid.Column="1" Name="descentTextBox" Text="{Binding Path=Pin, UpdateSourceTrigger=PropertyChanged}"  FontSize="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" MaxHeight="40" Width="140" Margin="-10,0,0,0">
                        <TextBox.Effect>
                            <DropShadowEffect Color="#FF555555" ShadowDepth="3" Opacity="0.7" BlurRadius="10"/>
                        </TextBox.Effect>
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"></Setter>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Grid>

                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>


