                            </Style>
                        </Border.Style>
                        <TextBlock Text="ПОДЪЕМ" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" />
                    </Border>



                    <TextBox Grid.Column="1" Name="ascentTextBox" Text="{Binding Path=Pin, UpdateSourceTrigger=PropertyChanged}"  FontSize="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" MaxHeight="40" Width="140" Margin="-10,0,0,0">
                        <TextBox.Effect>
                            <DropShadowEffect Color="#FF555555" ShadowDepth="3" Opacity="0.7" BlurRadius="10"/>
