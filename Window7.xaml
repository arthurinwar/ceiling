                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Label Content="DC" Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,-40,15,0" Foreground="#8FABDB" FontFamily="Inter" FontWeight="SemiBold" FontSize="40" />


                </Grid>
            </Grid>





        </Border>


    </Grid>
</Window>
