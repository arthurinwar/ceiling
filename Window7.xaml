                    <TextBox Grid.Row="1" Grid.Column="1" Name="vDcTextBox" Text="{Binding Path=Pin, UpdateSourceTrigger=PropertyChanged}"  FontSize="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" MaxHeight="40" Margin="0, 0, 20, 0">
                        <TextBox.Effect>
