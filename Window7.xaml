                    <TextBlock Grid.Row="1" Text="V" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40" Foreground="#8FABDB" FontFamily="Inter" FontWeight="SemiBold"></TextBlock>

                    <TextBox Grid.Row="0" Grid.Column="1" Name="dcTextBox" Text="{Binding Path=Pin, UpdateSourceTrigger=PropertyChanged}"  FontSize="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" MaxHeight="40" Margin="0, 0, 20, 0">
