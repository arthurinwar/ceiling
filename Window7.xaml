            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="1" Margin="40, 0, 40, 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="I" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40" Foreground="#8FABDB" FontFamily="Inter" FontWeight="SemiBold"></TextBlock>

                    <TextBlock Grid.Row="1" Text="V" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40" Foreground="#8FABDB" FontFamily="Inter" FontWeight="SemiBold"></TextBlock>

                    <TextBox Grid.Row="0" Grid.Column="1" Name="acITextBox" Text="{Binding Path=Pin, UpdateSourceTrigger=PropertyChanged}"  FontSize="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" MaxHeight="40" Margin="0, 0, 20, 0">
                        <TextBox.Effect>
                            <DropShadowEffect Color="#FF555555"  ShadowDepth="3" Opacity="0.7" BlurRadius="10"/>
                        </TextBox.Effect>
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"></Setter>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>

                    <TextBox Grid.Row="1" Grid.Column="1" Name="acVTextBox" Text="{Binding Path=Pin, UpdateSourceTrigger=PropertyChanged}"  FontSize="35" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" MaxHeight="40" Margin="0, 0, 20, 0">
